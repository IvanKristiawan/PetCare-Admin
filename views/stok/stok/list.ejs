<style>
    a {
        color: inherit; /* blue colors for links too */
        text-decoration: inherit; /* no underline */
    }
</style>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Kode</th>
            <th scope="col">Nama Stok</th>
            <th scope="col">Stok</th>
            <th scope="col">Harga Beli</th>
            <th scope="col">Harga Jual</th>
            <th scope="col">Nama Satuan</th>
        </tr>
    </thead>
    <tbody>
        <% for(let stok of stoks) {%>
            <tr>
                <th scope="row"><%= stok.kodeStok %></th>
                <td><a href="/stoks/stok/<%= stok._id %>"><%= stok.nama %></a></td>
                <td><%= stok.jumlahStok %></td>
                <td><%= stok.hargaBeli %></td>
                <td><%= stok.hargaJual %></td>
                <td><%= stok.namaSatuan %></td>
            </tr>
        <% } %> 
    </tbody>
</table>